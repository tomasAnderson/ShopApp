<UserControl x:Class="ShopApp.MyView.UCCurrentMonthIncome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShopApp.MyView"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="{Binding Message}" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Content="Сформировать запрос" Margin="5"
                Command="{Binding CmdCreateReport}" />
    </Grid>
</UserControl>